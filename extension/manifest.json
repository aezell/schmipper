{
  "manifest_version": 3,
  "name": "Schmipper",
  "version": "1.0.0",
  "description": "Control volume levels of individual browser tabs - The Tab Volume Chaos Controller",
  
  "permissions": [
    "tabs",
    "activeTab",
    "nativeMessaging",
    "storage"
  ],
  
  "host_permissions": [
    "*://*/*"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Volume Controller"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "commands": {
    "mute-all": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "Command+Shift+M"
      },
      "description": "Mute/unmute all audio sources",
      "global": true
    },
    "volume-up-all": {
      "suggested_key": {
        "default": "Ctrl+Shift+Up",
        "mac": "Command+Shift+Up"
      },
      "description": "Volume up for all sources (+10%)",
      "global": true
    },
    "volume-down-all": {
      "suggested_key": {
        "default": "Ctrl+Shift+Down",
        "mac": "Command+Shift+Down"
      },
      "description": "Volume down for all sources (-10%)",
      "global": true
    },
    "cycle-modes": {
      "suggested_key": {
        "default": "Ctrl+Shift+Tab",
        "mac": "Command+Shift+Tab"
      },
      "description": "Cycle volume modes (Independent → Linked → Inverse)",
      "global": true
    },
    "control-tab-1": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      },
      "description": "Control first audio tab",
      "global": true
    },
    "control-tab-2": {
      "suggested_key": {
        "default": "Ctrl+Shift+2",
        "mac": "Command+Shift+2"
      },
      "description": "Control second audio tab",
      "global": true
    },
    "control-tab-3": {
      "suggested_key": {
        "default": "Ctrl+Shift+3",
        "mac": "Command+Shift+3"
      },
      "description": "Control third audio tab",
      "global": true
    },
    "control-tab-4": {
      "suggested_key": {
        "default": "Ctrl+Shift+4",
        "mac": "Command+Shift+4"
      },
      "description": "Control fourth audio tab",
      "global": true
    },
    "control-tab-5": {
      "suggested_key": {
        "default": "Ctrl+Shift+5",
        "mac": "Command+Shift+5"
      },
      "description": "Control fifth audio tab",
      "global": true
    },
    "reset-volumes": {
      "suggested_key": {
        "default": "Ctrl+Shift+0",
        "mac": "Command+Shift+0"
      },
      "description": "Reset all volumes to 50%",
      "global": true
    },
    "focus-mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Focus mode (mute all except current tab)",
      "global": true
    }
  }
}
